pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...the Hello World'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...to change the World'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...for a better tomorrow'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing...final release botton that change the Hello World'
            }
        }        
    }
}
